<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.my.complexapp.views.CacheDBFragment">

    <TextView
        android:id="@+id/title_cash_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="CacheDB"/>

    <TextView
        android:id="@+id/text_view_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_cash_fragment"
        android:textAlignment="center"
        android:inputType="textMultiLine"
        android:lines="2"
        android:text=""/>
    <TextView
        android:id="@+id/text_view_net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_db"
        android:textAlignment="center"
        android:text=""/>

    <LinearLayout
        android:id="@+id/buttonUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/text_view_net">
        <Button
            android:id="@+id/update_button_db"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Update"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttonUpdate"
        android:padding="16dip"
        android:id="@+id/recyclerViewUser"/>

</RelativeLayout>
